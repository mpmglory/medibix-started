{% extends "PMMCoreBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block title2 %}Gestion des patients{% endblock %}

{% block menu %}

	<ul class="nav nav-pills nav-stacked">

        <a href="{{ path('pmm_patient_add') }}" class="btn btn-info">
            <span class="glyphicon glyphicon-plus"></span> Ajouter un patient</a><p>  </p>
        
        <a href="{{ path('pmm_patient_viewAll') }}" class="btn btn-warning">
            <span class="glyphicon glyphicon-edit"></span> Modifier un patient</a><p>  </p>
        
        <a href="{{ path('pmm_patient_viewAll') }}" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove"></span> Supprimer un patient</a>
        
	</ul>

{% endblock %}

{% block body %}
	<h3>Tous les patients</h3>
	<ul>
	{% for patient in listPatient %}
		<li>
			<a href="{{ path('pmm_patient_view', {'id': patient.id}) }}">
                {{ patient.name }} </br>
			</a>
		</li>
	{% else %}
		<li>Aucun patient trouvé dans la base de données</li>
	{% endfor %}
	</ul>
	
{% endblock %}