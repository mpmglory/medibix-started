{% block body %}
    
    {% for exam in listExam %}
        <div class="well">
            <h4>Nom: {{ exam.name }} </h4>
            <b>Prix:</b> {{ exam.price }} </br><hr>
            <b>Description:</b> {{ exam.description }} </br><hr>
        <p>

            <a href="{{ path('pmm_examen_edit', {'id': exam.id}) }}" class="btn btn-warning">
