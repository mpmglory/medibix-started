{% extends "PMMCoreBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block title2 %}Gestion des bulletins médicaux{% endblock %}

{% block menu %}

	<ul class="nav nav-pills nav-stacked">

        <a href="{{ path('pmm_bulletin_add') }}" class="btn btn-info">
            <span class="glyphicon glyphicon-plus"></span> Ajouter un bulletin</a><p>  </p>
        
        <a href="{{ path('pmm_bulletin_viewAll') }}" class="btn btn-warning">
            <span class="glyphicon glyphicon-edit"></span> Modifier un bulletin</a><p>  </p>
        
        <a href="{{ path('pmm_bulletin_viewAll') }}" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove"></span> Supprimer un bulletin</a>
        
	</ul>

{% endblock %}

{% block body %}
	<h3>Tous les bulletins</h3>
	<ul>
	{% for bul in listBul %}
		<li>
			<a href="{{ path('pmm_bulletin_view', {'id': bul.id}) }}">
               Bulletin numéro {{ bul.id }}
                du patient {{ bul.patient.name }}
                créé le {{ bul.date|date('d-m-Y') }} </br>
			</a>
		</li>
	{% else %}
		<li>Aucun bulletin trouvé dans la base de données</li>
	{% endfor %}
	</ul>
	
{% endblock %}