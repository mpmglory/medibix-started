{% extends "PMMCoreBundle::layout.html.twig" %}

{% block title %}
	Infos sur un bulletin - {{ parent() }}
{% endblock %}

{% block title2 %}
    Bulletin d'examen numero {{ bul.id }}
    du {{ bul.date|date('d-m-Y') }}
{% endblock %}

{% block menu %}

	<ul class="nav nav-pills nav-stacked">
        <a href="{{ path('pmm_bulletin_homepage') }}" class="btn btn-primary btn-block btn-lg">
            <span class="glyphicon glyphicon-chevron-left"></span> Retour à l'accueil </a><p>  </p>
        <a href="{{ path('pmm_bulletin_view-all') }}" class="btn btn-primary btn-block btn-lg">
			<span class="glyphicon glyphicon-chevron-left"></span>
			Tous les bulletins
		</a><p>  </p>
	</ul>

{% endblock %}

{% block body %}
	<div class="row">
    <h3>
        <table class="table table-bordered table-striped">
        <tbody>
            <tr class="success">
                <td class="col-md-3">Patient</td>
                <td class="col-md-6">{{ bul.patient.name }}</td>
            </tr>
            <tr class="danger">
                <td class="col-md-3">Examens demandés</td>
                <td class="col-md-6">
                    <ul>
                        {% for exam in bul.examens %}
                            <li>{{ exam.name }}</li>
                            {% for resul in exam.resultats %}
                                {{ resul.name }}</br>
                            {% endfor %}
                        {% endfor %}
                    </ul>

                </td>
            </tr>
            <tr class="warning">
                <td class="col-md-3">Facture</td>
                <td class="col-md-6"><b>{{ bul.amount }} FCFA</b></td>
            </tr>
        </tbody>
        </table>
    </p></h3>
    </div>



    <div class="well">
    <div class="row">
        <div class="col-md-4">
        <a href=" # " class="btn btn-success btn-block btn-lg">
            <span class="glyphicon glyphicon-print"></span>
            Imprimer
        </a><p>  </p>
        </div>
        
        <div class="col-md-4">
        <a href="{{ path('pmm_bulletin_edit', {'id': bul.id}) }}" class="btn btn-warning btn-block btn-lg">
            <span class="glyphicon glyphicon-edit"></span>
            Modifier
        </a><p>  </p>
        </div>
        
        <div class="col-md-4">
        <a href="{{ path('pmm_bulletin_delete', {'id': bul.id}) }}" class="btn btn-danger btn-block btn-lg">
            <span class="glyphicon glyphicon-trash"></span>
            Supprimer
        </a>
        </div>
    </div>
    </div>

{% endblock %}