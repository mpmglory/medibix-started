{% extends "PMMCoreBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block title2 %} Gestion des ber {% endblock %}

{% block menu %}

	<ul class="nav nav-pills nav-stacked">

        <a href="{{ path('pmm_ber_add') }}" class="btn btn-info btn-block btn-lg">
            <span class="glyphicon glyphicon-plus"></span> Ajouter un ber</a><p>  </p>
        
        <a href="{{ path('pmm_ber_view-all') }}" class="btn btn-warning btn-block btn-lg">
            <span class="glyphicon glyphicon-edit"></span> Modifier un ber</a><p>  </p>
        
        <a href="{{ path('pmm_ber_view-all') }}" class="btn btn-danger btn-block btn-lg">
            <span class="glyphicon glyphicon-remove"></span> Supprimer un ber</a>
        
	</ul>

{% endblock %}

{% block body %}
	<h3>Tous les bers</h3>
	<ul>
	{% for ber in listBer %}
		<li>
			<a href="{{ path('pmm_ber_view', {'id': ber.id}) }}">
                {{ ber.name }} </br>
			</a>
		</li>
	{% else %}
		<li>Aucun ber trouvé dans la base de données</li>
	{% endfor %}
	</ul>
	
{% endblock %}